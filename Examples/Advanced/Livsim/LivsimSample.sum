     if {$grainWt > 0} {
       set grainN [apsimGet $paddock.peanut.graingreenN]
       set grainProtein [expr $grainN / $grainWt * 100.0 * 5.71] ;# (%)
     } else {
       set grainProtein 0.0
     }
     set stover [expr ([apsimGet $paddock.peanut.LeafGreenWt] + \
