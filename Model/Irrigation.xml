<Type name="irrigation">
   <MetaData>
      <UItype>VBUserInterface.GenericUI</UItype>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\banner2.jpg</Image>
      <Documentation name="Science documentation">../apsim/irrigate/docs/irrigate_science.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\drink_blue32.png</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\drink_blue16.png</SmallIcon>
      <dll>%apsim%\Model\Irrigation.dll</dll>
      <drops>
         <drop>toolbox</drop>
         <drop>area</drop>
         <drop>folder</drop>
      </drops>
      <ApsimToSim>
         <component name="[irrigation.name]" executable="[dll]">
            <executable>[dll]</executable>
            <initdata>
               [irrigation.innerxml]
               <solutes>nh4 no3 cl</solutes>
            </initdata>
         </component>
      </ApsimToSim>
   </MetaData>
   <Info>
      <variables>
         <variable name="irrigation" description="Irrigation entering the profile (mm)"/>
         <variable name="irrig_loss" description="Irrigation losses (mm)"/>
         <variable name="irrig_tot" description="Total applied irrigation (irrigation + loss) (mm)"/>
         <variable name="allocation" description="Remaining irrigation allocation (Ml)"/>
         <variable name="carry_over" description="Carry-over from allocation (Ml)"/>
         <variable name="irr_fasw" description="Irrigation fraction of available soil water (0-1)"/>
         <variable name="irr_deficit" description="Water deficit within the critical irrigation soil depth (mm)"/>
      </variables>
   </Info>
</Type>