<pond>
   <constants>
      <ef_res description="fraction of residue C mineralized retained in system (0-1)">0.4 </ef_res>

      <fr_res_biom description="fraction of retained residue C transferred to biomass (0-1)">0.9 </fr_res_biom> 

      <mcn description="CN ratio of microbes">8.0 </mcn>

      <pond_cn description="guess pond carbon-nitrogen ratio">30 </pond_cn>

      <maxrate_PAB description="maximum rate of algae growth in kg/ha/day">20 </maxrate_PAB>
                    <!-- -according to Roger (1996) PAB should reach a max of 500 kg/ha -->

      <PAB_p_index description="a modifying factor on algal production based on availability of P"> 1.0 </PAB_p_index>
                    <!-- ! Godwin & Singh (1998) suggested two values 1.0 for no limits, 0.5 for limited -->
                    
      <water_albedo description="albedo of pond water">0.05 </water_albedo>   

      <algae_present description="an indicator of whether algae is present in environment">1 </algae_present>

      <amlos_fudge_factor description=a factor applied to the daily calculated amlos (ammonia (NH3-) loss>0.5 </amlos_fudge_factor>

      <solute_infiltration_rate description="solute infiltration rate fudge">0.3 </solute_infiltration_rate>

    </constants>                    
</pond>                  
                                        
