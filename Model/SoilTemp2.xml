<Type name="SoilTemp2">
   <MetaData>
      <UItype>CSUserInterface.GenericUI</UItype>
      <IsCrop>No</IsCrop>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\banner2.jpg</Image>
      <Documentation>%apsim%\Documentation\4 Module Reference\SoilTemp.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\thermometer32.png</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\thermometer16.png</SmallIcon>
      <dll>%apsim%\Model\SoilTemp2.dll</dll>
      <drops>
         <drop>toolbox</drop>
         <drop>area</drop>
         <drop>simulation</drop>
         <drop>folder</drop>
      </drops>
      <ApsimToSim>
         <component name="[InstanceName]" executable="[dll]" class="SoilTemp2">
            <executable name="[dll]" version="1.0"/>
            <initdata>
               [Model]
                  <clay description="percentage of clay">[soil.ParticleSizeClay]</clay> 
               [SoilTemp2.innerxml] 
            </initdata> 
         </component>
      </ApsimToSim>
   </MetaData>
   <Model>
      <SoilTempdotNET>
         <nu description="(-) control forward/backward differencing">0.6 </nu>
         <vol_spec_heat_om description="(Joules*m-3*K-1)">5.00e6 </vol_spec_heat_om>
         <vol_spec_heat_water description="(Joules*m-3*K-1)">4.18e6 </vol_spec_heat_water>
         <vol_spec_heat_clay description="(Joules*m-3*K-1)">2.39e6 </vol_spec_heat_clay>
         <maxt_time_default description="hours">14.0 </maxt_time_default>
         <bound_layer_cond_source description="boundary layer conductance source (calc/constant)">constant</bound_layer_cond_source>
         <boundary_layer_cond description="boundary layer conductance (W/m2/K)">20.0</boundary_layer_cond>
         <boundary_layer_conductance_iterations description="Number of iterations to calc boundary layer conductance (0-10)">1</boundary_layer_conductance_iterations>
         <net_radn_source description="net radiation source (calc/eos)">eos</net_radn_source>
		   <clay description="proportion of clay">1.0</clay>
         <default_wind_speed description="m/s">3.0</default_wind_speed>
         <default_altitude description="default altitude (m) 275m (700 ft) is approx 980 hPa">275.0</default_altitude>
         <default_instrum_height description="default instrument height for wind and temperature (m)">1.2</default_instrum_height>
         <bare_soil_height description="height of bare soil (mm)">57.0</bare_soil_height>
      </SoilTempdotNET>
   </Model>
   
</Type>