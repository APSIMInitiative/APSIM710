<Type name="soi">
   <MetaData>
      <UItype>VBUserInterface.FileUI</UItype>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\banner2.jpg</Image>
      <Description>This component allows the user to add SOI phases to a simulation. These phases can then be used in manager logic.</Description>
      <Documentation>%apsim%\Documentation\4 Module Reference\SOI.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\thermometer32.png</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\thermometer16.png</SmallIcon>
      <dll>%apsim%/Model/SOI.%dllext%</dll>
      <drops>
         <drop>toolbox</drop>
         <drop>simulation</drop>
         <drop>folder</drop>
      </drops>
      <ApsimToSim>
         <component name="[soi.name]" executable="[dll]">
            <executable name="[dll]" version="1.0"/>
            <initdata>
               [soi.innerxml]
            </initdata>
         </component>
      </ApsimToSim>
   </MetaData>
</Type>