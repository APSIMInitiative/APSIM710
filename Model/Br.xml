<Type name="br">
   <MetaData>
      <UItype>VBUserInterface.GenericUI</UItype>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\banner2.jpg</Image>
      <Documentation>%apsim%\Documentation\4 Module Reference\Solute.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\potion_green32.png</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\potion_green16.png</SmallIcon>
      <dll>%apsim%\Model\Solute.dll</dll>
      <drops>
         <drop>toolbox</drop>
         <drop>area</drop>
         <drop>simulation</drop>
         <drop>folder</drop>
      </drops>
      <ApsimToSim>
         <component name="[br.name]" executable="[dll]">
            <executable name="[dll]" version="1.0"/>
            <initdata>
               [Model]
               <solute_names>br</solute_names>
               <d0_br>[br.d0]</d0_br>
               <br>[br.layers]</br>
            </initdata>
         </component>
      </ApsimToSim>
   </MetaData>
   <Model>
      <ub_solute description="Upper bound for solutes">1000</ub_solute>
      <lb_solute description="Lower bound for solutes">0</lb_solute>
   </Model>
   <Info>
      <variables>
         <variable name="br" description ="Br in each layer (kg/ha)"/>
         <variable name="max_br" description ="max Br in any layer (kg/ha)"/>
         <variable name="maxppm_br" description ="max Br in any layer (ppm)"/>
         <variable name="maxlayer_br" description ="soil layer in which max_br occurs"/>
      </variables>
   </Info>
</Type>
