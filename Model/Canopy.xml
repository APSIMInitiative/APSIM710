<Type name="canopy">
   <MetaData>
      <UItype>VBUserInterface.GenericUI</UItype>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\banner2.jpg</Image>
      <Documentation name="Science documentation">../apsim/canopy/docs/canopy_science.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\leaf32.bmp</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\leaf16.bmp</SmallIcon>
      <dll>%apsim%\Model\Canopy.dll</dll>
      <drops>
         <drop>toolbox</drop>
         <drop>area</drop>
         <drop>simulation</drop>
         <drop>folder</drop>
      </drops>
      <ApsimToSim>
         <component name="[Canopy.name]" executable="[dll]">
            <executable>[dll]</executable>
            <initdata>
               [Canopy.innerxml]
            </initdata>
         </component>
      </ApsimToSim>
   </MetaData>
   <Info>
      <variables>
         <variable name="cover_tot_sum" array="F" description="Sum of crop cover (0-1)"/>
         <variable name="cover_tot_all" array="T" description="Cover of each crop (0-1)"/>
         <variable name="cover_height_all" array="T" description="Height of each crop (0-1)"/>
         <variable name="cover_green_sum" array="F" description="Green cover of all crops (0-1)"/>
         <variable name="cover_green_all" array="T" description="Green cover of each crop (0-1)"/>
         <variable name="cover_crops_all" array="T" description="Which crops are in canopy (boolean)"/>
      </variables>
   </Info>
</Type>