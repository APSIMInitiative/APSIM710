   <lucerne>
      <UItype>VBUserInterface.EmptyUI</UItype>
      <IsCrop>Yes</IsCrop>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\lucerne.jpg</Image>
      <Description>Most APSIM crop or plant modules do not require extra user input.  Crop specific parameters are either provided for your chosen soil, or are captured as part of the standard model validation process.</Description>
      <Documentation name="Lucerne science documentation">../apsim/lucerne/docs/lucerne_science.htm</Documentation>
      <Documentation name="Generic plant" >../apsim/plant/docs/plant_science.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\leaf32.bmp</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\leaf16.bmp</SmallIcon>
      <drops>
         <drop name="toolbox"/>
         <drop name="area"/>
         <drop name="simulation"/>
         <drop name="folder"/>
     </drops>
      <class name="plant"/>
      <class name="lucerne_regrowth"/>
      <class name="dormancy"/>
      <class name="lucerne_delayed"/>
      <class name="lucerne_reduced"/>
      <class name="lucerne_sprayed"/>
      <cultivar name="hunter_river"/>
      <cultivar name="trifecta"/>
      <cultivar name="kaituna"/>
      <cultivar name="sceptre"/>
      <cultivar name="aquarius"/>
      <cultivar name="dingxi"/>
      <cultivar name="Longdong"/>
      <variables link="%apsim%\Documentation\ModelInfo\lucerne.xml"/>
      <events link="%apsim%\Documentation\ModelInfo\lucerne.xml"/>
      <ApsimToSim>
         <type>component</type>
         <dll>%apsim%\Model\Plant.dll</dll>
         <ini>%apsim%\Model\Lucerne.xml</ini>
         <calldll>
            <class>Actions.SoilActions</class>
            <method>WriteCropSim</method>
         </calldll>
      </ApsimToSim>
   </lucerne>