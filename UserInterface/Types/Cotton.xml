   <cotton>
      <UItype>VBUserInterface.EmptyUI</UItype>
      <IsCrop>Yes</IsCrop>
      <ShowInMainTree>Yes</ShowInMainTree>
      <Image>%apsim%\UserInterface\Images\cotton.jpg</Image>
      <Description>Most APSIM crop or plant modules do not require extra user input.  Crop specific parameters are either provided for your chosen soil, or are captured as part of the standard model validation process.</Description>
      <Documentation name="Cotton science documentation">../apsim/ozcot/docs/ozcot_science.htm</Documentation>
      <LargeIcon>%apsim%\UserInterface\Images\leaf32.bmp</LargeIcon>
      <SmallIcon>%apsim%\UserInterface\Images\leaf16.bmp</SmallIcon>
      <drops>
         <drop name="toolbox"/>
         <drop name="area"/>
         <drop name="simulation"/>
         <drop name="folder"/>
     </drops>
      <class    name="plant"/>
      <cultivar name="CS50"/>
      <cultivar name="CS6S"/>
      <cultivar name="CS8S"/>
      <cultivar name="DP16"/>
      <cultivar name="DP61"/>
      <cultivar name="DP90"/>
      <cultivar name="Empr"/>
      <cultivar name="Kwam"/>
      <cultivar name="L22"/>
      <cultivar name="L23"/>
      <cultivar name="S101"/>
      <cultivar name="S324"/>
      <cultivar name="Sc34"/>
      <cultivar name="Sica"/>
      <cultivar name="ScV1"/>
      <cultivar name="ScV2"/>
      <cultivar name="S189"/>
      <cultivar name="Si14"/>
      <cultivar name="Siok"/>
      <cultivar name="V15"/>
      <variables>
<variable name="crop_type" description="Type of crop" units = ""/>
<variable name="ozcot_crop_in" description="Crop sown flag" units = ""/>
<variable name="ozcot_status" description="ozcot termination indicators" units = ""/>
<variable name="das" description="Days after sowing" units = "days"/>
<variable name="yield" description="Lint produced (bales/ha)" units = "bales/ha"/>
<variable name="dm" description="Dry matter (kg/ha)" units = "kg/ha"/>
<variable name="lai" description="Leaf Area Index (m^2/m^2)" units = "m^2/m^2"/>
<variable name="sumdd" description="Cumulative thermal time (dd)" units = "oCd"/>
<variable name="sites" description="Number of fruiting sites /m" units = "1/m2"/>
<variable name="squarz" description="Number of squares /m" units = "1/m2"/>
<variable name="fru_no_cat" description="fruit nos in each fruit category /m" units = "1/m2" array="T"/>
<variable name="bollz" description="Number of bolls /m" units = "1/m2"/>
<variable name="openz" description="Number of open bolls /m" units = "1/m2"/>
<variable name="alint" description="Weight of lint, ginned equivalent (kg/ha)" units = "kg/ha"/>
<variable name="openwt" description="Weight of open bolls (kg/ha)" units = "kg/ha"/>
<variable name="frudw" description="Dry wt of growing fruit (kg/ha)" units= "kg/ha"/>
<variable name="frudw_tot" description="Total dry wt of fruit (kg/ha)" units = "kg/ha"/>
<variable name="frudw_shed" description="Dry wt of shedded flowers and fruit (kg/ha)" units = "kg/ha"/>
<variable name="frun" description="Fruit number" units=""/>
<variable name="bload" description="Boll load" units = ""/>
<variable name="carcap_c" description="Carrying Capacity - Carbon" units = ""/>
<variable name="carcap_n" description="Carrying Capacity - Nitrogen" units = ""/>
<variable name="vnstrs" description="Vegetative nitrogen stress" units = ""/>
<variable name="fnstrs" description="Fruit nitrogen stress" units = ""/>
<variable name="dw_boll" description="Dry wt of bolls" units = "kg/ha"/>
<variable name="dw_root" description="Dry wt of roots" units = "kg/ha"/>
<variable name="dw_leaf" description="Dry wt of leaf" units = "kg/ha"/>
<variable name="dw_stem" description="Dry wt of stem" units = "kg/ha"/>
<variable name="totnup" description="Total nitrogen uptake" units = "kg/ha"/>
<variable name="lint_yield" description="Lint produced" units= "bales/ha"/>
<variable name="bolls_sc" description="Seed Cotton per boll" units = "g/boll"/>
<variable name="squarz_max" description="Peak square numbers for any day" units = "1/m2"/>
<variable name="cover_green" description="Green cover" units = ""/>
<variable name="cover_tot" description="Total cover" units = ""/>
<variable name="height" description="Plant height" units = "mm"/>
<variable name="tsno3" description="total soil NO3 over all layers" units = "kg/ha"/>
<variable name="ysno3" description="yesterday's soil NO3 over all layers" units = "kg/ha"/>
<variable name="tsnh4" description="total soil NH4 over all layers" units = "kg/ha"/>
<variable name="ysnh4" description="yesterday's soil NH4 over all layers" units = "kg/ha"/>
<variable name="rtdep" description="Rooting depth (cm)" units = "cm"/>
<variable name="s_bed_mi" description="Seed bed moisture index" units = ""/>
<variable name="smi" description="Soil Moisture Index" units = ""/>
<variable name="wli" description="Waterlogging Index" units = ""/>
<variable name="ep" description="Plant transpiration (mm)" units = "mm"/>
<variable name="evap_plant" description="Evaporation from plants (cm)" units = "cm"/>
<variable name="evap_soil" description="Evaporation from soil (cm)" units = "cm"/>
<variable name="evap_pot" description="Potential et over bare soil (cm)" units = "cm"/>
<variable name="availn" description="Nitrogen available for uptake" units = "kg/ha"/>
<variable name="uptakn" description="Nitrogen taken up by crop" units = "kg/ha"/>
<variable name="n_uptake" description="Daily nitrogen uptake" units = "kg/ha"/>
<variable name="lai_max" description="Peak LAI" units = "m2/m2"/>
<variable name="i_def" description="Day of first defoliation spray" units = "das"/>
<variable name="i_def2" description="Day of second defoliation spray" units="das"/>
      </variables>
      <events>
         <event name = "sowing"/>
         <event name = "harvesting"/>
      </events>
      <ApsimToSim>
         <type>component</type>
         <dll>%apsim%\Model\Ozcot.dll</dll>
         <ini>%apsim%\Model\Ozcot.xml</ini>
         <calldll>
            <class>Actions.SoilActions</class>
            <method>WriteCropSim</method>
         </calldll>
      </ApsimToSim>
   </cotton>