            !rz_no3 = no3(1) + no3(2) + no3(3) + no3(4) + no3(5) + no3(6) + no3(7) + no3(8)
            rz_no3 = no3(1) + no3(2) + no3(3)

            if rz_no3 < wht_fert_target then
               wht_fert = wht_fert_target - rz_no3
               Fertiliser apply amount = wht_fert, depth = 0, type = no3_n
            endif

         else
            wht_crop_num = 0

            if (day >= wht_win2) then
               chickpea sow population = 25, sowing_depth = 80, cultivar = amethyst
            else
               chickpea sow population = 25, sowing_depth = 80, cultivar = amethyst
            endif
         endif

         surfaceom tillage type = planter ()
         crop_in = 1
         system_fallow = 0
         days_since_wheat = day - wht_win1

      elseif day = wht_win3 then

         ! reset counter in case of failed planting
         days_since_wheat = day - wht_win1
         wht_crop_num = 0

      endif

   else

   endif

   ! Sorghum Sowing Rule
   ! ===================

   if (system_fallow > srg_min_fallow) AND
      ((days_since_sorg / 365) > srg_freq) AND
      (day >= srg_win1 or day <= srg_win3) THEN

      if (fasw10 >= 0.0) AND (fasw10 <= 0.99) AND (fasw110 >= 0.75)
           THEN

         if (srg_seeding = 1 ) then
             !wht_crop_num = 0
             sorghum sow population = 3.5, cultivar = early, sowing_depth = 101, tiller_no_fertile = 1.5
         else
             !wht_crop_num = 0
             sorghum sow population = 6.5, cultivar = early, sowing_depth = 101, tiller_no_fertile = 1.5
         endif

         !rz_no3 = no3(1) + no3(2) + no3(3) + no3(4) + no3(5) + no3(6) + no3(7) + no3(8)
         rz_no3 = no3(1) + no3(2) + no3(3)
         if rz_no3 < srg_fert_target then
            sor_fert = srg_fert_target - rz_no3
               Fertiliser apply amount = sor_fert, depth = 0, type = no3_n
         endif
         surfaceom tillage type = planter ()
         crop_in = 1
         system_fallow = 0
         if day <= srg_win3 then
            days_since_sorg = day + 365 - srg_win1
         else
            days_since_sorg = day - srg_win1
         endif
      elseif day = srg_win3 then

         days_since_sorg = day + 365 - srg_win1
      endif

   else

   endif
else

! Wheat harvest at PhenologyStage 10

   if wheat.StageName = 'harvest_ripe' or wheat.PlantStatus = 'dead' then
      w_mat_day = day
      wheat harvest
      wheat kill_crop
      wheat end_crop
      crop_in = 0
   endif

   if (chickpea.PhenologyStage = 11) OR (chickpea.PlantStatus = 'dead') then
      c_mat_day = day

      chickpea harvest
      chickpea end_crop
      crop_in = 0
   endif

! Sorghum harvest at PhenologyStage 11 or on 15 June, whichever is earlier

   if (sorghum.PhenologyStage = 11) OR (sorghum.PlantStatus = 'dead') OR ((sorghum.PlantStatus = 'alive') AND (day = 166)) then
      s_mat_day = day
      sorghum harvest
      sorghum kill_crop
      sorghum end_crop
      crop_in = 0
   endif

endif

days_since_wheat = days_since_wheat + 1
days_since_sorg = days_since_sorg + 1




